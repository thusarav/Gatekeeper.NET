{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information",
      "Yarp": "Debug",
      "Yarp.ReverseProxy": "Debug"
    }
  },

  "AllowedHosts": "*",

  "Jwt": {
    "Key": "super-secret-dev-key-change-later",
    "Issuer": "Gatekeeper",
    "Audience": "GatekeeperClients",
    "ExpiresMinutes": 60
  },

  "ReverseProxy": {
    "Routes": {
      "service-a-route": {
        "ClusterId": "service-a-cluster",
        "Match": {
          "Path": "/service-a/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/service-a" }
        ],
        "AuthorizationPolicy": "authenticated"
      },

      "service-admin-route": {
        "ClusterId": "service-admin-cluster",
        "Match": {
          "Path": "/admin/{**catch-all}"
        },
        "AuthorizationPolicy": "admin-only"
      }
    },

    "Clusters": {
      "service-a-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5207/"
          }
        }
      },

      "service-admin-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5156/"
          }
        }
      }
    }
  }
}
